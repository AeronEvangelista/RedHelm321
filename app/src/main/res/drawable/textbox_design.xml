<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAF7F7"/> <!-- Background color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FBFBFB"/> <!-- Border color -->
            <corners android:radius="12dp"/> <!-- Match the corner radius -->
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
</layer-list>